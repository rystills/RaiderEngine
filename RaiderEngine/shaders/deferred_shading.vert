// deferred_shading (vs) - heavy lifting shader; retrives the data from the gbuffer, then calculates lighting, shadows, etc..
#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoords;

out vec2 TexCoords;

void main()
{
    TexCoords = aTexCoords;
    gl_Position = vec4(aPos, 1.0);
}